    <div class="hirdetes">
      <form action="/post/submitannouncement_form" method="POST">
        <input type="hidden"  id="username" name="username" value="{{felhasznalo.Nev}}">
        <label for="varos">Város:</label>
        <input type="text" id="varos" name="varos" placeholder="Kolozsvár">
        <label for="kerulet">Kerület:</label>
        <input type="text" id="kerulet" name="kerulet" placeholder="Marasti">
        <label for="felszinterulet">Felszinterület:</label>
        <input type="number" id="felszinterulet" name="felszinterulet" placeholder="10m^2">
        <label for="ar">Ár:</label>
        <input type="number" id="ar" name="ar" placeholder="Ár">
        <label for="szobak">Szobák száma:</label>
        <input type="number" id="szobak" name="szobak" placeholder="Szobák száma">
        <label for="datum">Dátum:</label>
        <input type="date" id="datum" name="datum">
        <button type="submit" id="hirdet">Hirdetés</button>
        <button type="button" id="clear-hirdet">Törlés</button>
      </form>
      <p>{{message}}</p>
    </div>
